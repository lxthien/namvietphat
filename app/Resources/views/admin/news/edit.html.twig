{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_news_edit' %}

{% block main %}
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">{{ 'title.edit_news'|trans({'%id%': news.id}) }}</strong>
                            <a class="pull-right" target="_blank" href="{{ path('news_show', {'slug': news.url, 'preview' : 'true', 'preview_id' : news.id }) }}">Xem trước</a>
                        </div>
                        <div class="card-body">
                            <!-- Credit Card -->
                            <div id="pay-invoice">
                                <div class="card-body" id="news">
                                    {{ form_start(form, {attr: attr|default({})}) }}
                                        {{ form_row(form.title) }}
                                        {{ form_row(form.title) }}
                                        {{ form_row(form.url) }}
                                        {{ form_row(form.enable) }}
                                        {{ form_row(form.imageFile) }}
                                        {{ form_row(form.description) }}
                                        {{ form_row(form.contents) }}
                                        {{ form_row(form.categoryPrimary) }}
                                        {{ form_row(form.category) }}
                                        {{ form_row(form.tags) }}

                                        <div class="card-title">
                                            <h3>{{ 'label.seo'|trans }}</h3>
                                        </div>
                                        <hr>
                                        <div class="form-group">
                                            {{ form_label(form.pageTitle) }}
                                            {{ form_errors(form.pageTitle) }}
                                            {{ form_widget(form.pageTitle) }}
                                            <small class="form-text">Độ dài meta title trong khoảng 50 - 70 kí tự. Độ dài hiện tại là: <span class="help-page-title text-danger font-weight-bold">0</span></small>
                                        </div>
                                        <div class="form-group">
                                            {{ form_label(form.pageDescription) }}
                                            {{ form_errors(form.pageDescription) }}
                                            {{ form_widget(form.pageDescription) }}
                                            <small class="form-text">Độ dài meta description tối đa 160 kí tự. Độ dài hiện tại là: <span class="help-page-description text-danger font-weight-bold">0</span></small>
                                        </div>
                                        {{ form_row(form.pageKeyword) }}

                                        <button type="submit" class="{{ button_css|default("btn btn-primary") }}">
                                            <i class="fa fa-save" aria-hidden="true"></i> {{ 'label.save'|trans }}
                                        </button>

                                        <a href="{{ path('admin_news_index') }}" class="btn btn-link">
                                            <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_list'|trans }}
                                        </a>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- .card -->
                </div>
                <!--/.col-->
            </div>
        </div>
        <!-- .animated -->
    </div>
{% endblock %}
