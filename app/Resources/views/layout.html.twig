<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, maximum-scale=1">
        
        <!-- https://realfavicongenerator.net -->
        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('apple-touch-icon.png') }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('favicon-32x32.png') }}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('favicon-16x16.png') }}">
        <link rel="icon" href="{{ asset('favicon.ico') }}" type="image/x-icon">
        <link rel="manifest" href="/site.webmanifest">
        <meta name="msapplication-TileColor" content="#da532c">
        <meta name="theme-color" content="#ffffff">

        <title>{% block title %}{{ get_setting('pageTitle') }}{% endblock %}</title>
        <meta name="description" content="{% block description %}{{ get_setting('pageDescription') }}{% endblock %}">
        <meta name="keywords" content="{% block keyword %}{{ get_setting('pageKeyword') }}{% endblock %}">

        {% block robots %}
        <meta name="robots" content="index, follow" />
        {% endblock %}
        <meta name="revisit-after" content="1 days">
        <meta http-equiv="content-language" content="vi">

        {% if app.request.attributes.get('_route') is not null %}
        <link rel="canonical" href="{{ url(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}"/>
        {% endif %}
        
        <!-- Open Graph data -->
        <meta property="og:locale" content="vi_VN" />
        {% block structuredOpenGraph %}
            <meta property="og:type" content="website" />
            <meta property="og:title" content="{{ block('title') }}" />
            <meta property="og:description" content="{{ block('description') }}" />
            <meta property="og:image" content="{{ absolute_url(asset('assets/images/logo.png')) }}" />
        {% endblock %}
        {% if app.request.attributes.get('_route') is not null %}
            <meta property="og:url" content="{{ app.request.uri }}" />
        {% endif %}
        <meta property="og:site_name" content="{{ get_setting('siteName') }}" />
        <meta property="fb:app_id" content="{{ get_setting('facebookAppID') }}" />
        <!-- Open Graph data -->

        <!-- Twitter Card data -->
        <meta name="twitter:card" content="summary">
        <meta name="twitter:site" content="@namvietphatcorp">
        <meta name="twitter:title" content="{{ block('title') }}">
        <meta name="twitter:description" content="{{ block('description') }}">
        <meta name="twitter:creator" content="@namvietphatcorp">
        {% block twitterImage %}
        {% endblock %}
        <!-- Twitter Card data -->

        <meta name="yandex-verification" content="6d3f278ed26f14b2" />

        {% block structuredOrganization %}
        {% endblock %}

        {% block structuredWebSite %}
        {% endblock %}

        {% block structuredPerson %}
        {% endblock %}

        {{ get_setting('googleAnalytic')|raw }}

        {{ get_setting('googleTagManager1')|raw }}

        <link href="{{ asset('build/css/app.css') }}" rel="preload stylesheet" as="style" onload="this.rel='stylesheet'" >
        <noscript><link rel="stylesheet" href="{{ asset('build/css/app.css') }}" ></noscript>
        {% block stylesheets %}
        {% endblock %}

        <script src="https://kit.fontawesome.com/3266abfb06.js" crossorigin="anonymous"></script>
    </head>
    <body>
        {{ get_setting('googleTagManager2')|raw }}

        <div class="container-fluid wrapper">
            {{ include('layout/header.html.twig') }}
            {{ include('layout/menu.html.twig') }}
            {{ include('layout/slide.html.twig') }}

            {% block body %}{% endblock %}

            {{ include('layout/footer.html.twig') }}
            {{ include('layout/footer_UI.html.twig') }}

            {{ include('layout/contactbar.html.twig') }}
            {% block contactHotline %}
                {{ include('layout/hotline.html.twig') }}
            {% endblock %}

            {{ get_setting('facebookMessenger')|raw }}
        </div>
    </body>
</html>
